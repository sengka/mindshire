<div class="welcome-hero">
  <div class="welcome-content register-container" style="max-width: 500px">
    <header class="register-header">
      <h1 class="magical-title" style="font-size: 2.5rem">🔮 Yeni Şifre</h1>
      <p class="magical-subtitle">GÜCÜNÜ YENİDEN KAZAN</p>

      <% if (typeof error !=='undefined' ) { %>
        <div style="
          color: #ff6b6b;
          margin-bottom: 15px;
          font-size: 0.9rem;
          background: rgba(255, 0, 0, 0.1);
          padding: 5px;
          border-radius: 5px;
        ">
          ⚠️ <%= error %>
        </div>
        <% } %>
    </header>

    <form action="/sifre-sifirla/<%= token %>" method="POST" class="magic-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group magic-field">
        <span class="input-icon">🔒</span>
        <input type="password" name="password" class="magic-input" placeholder="Yeni Gizli Şifre" required
          minlength="8" />
      </div>

      <div class="form-group magic-field">
        <span class="input-icon">🔐</span>
        <input type="password" name="confirmPassword" class="magic-input" placeholder="Şifreyi Tekrar Yaz" required
          minlength="8" />
      </div>

      <button type="submit" class="btn-magic full-width">
        <span class="icon">✨</span> Şifreyi Yenile
      </button>
    </form>
  </div>
</div>