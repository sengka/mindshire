<div class="fixed-background"></div>

<main class="profile-page">
    <!-- PROFILE HEADER -->
    <section class="profile-hero">
        <div class="profile-header-content">
            <div class="profile-avatar-large">
                <img src="<%= user.avatar %>" alt="<%= user.username %>" id="currentAvatarDisplay">
            </div>
            <div class="profile-info">
                <h1 class="profile-username">
                    <%= user.username %>
                </h1>
                <div class="profile-stats-row">
                    <div class="profile-stat">
                        <span class="stat-label">Level</span>
                        <span class="stat-value">
                            <%= user.stats.level %>
                        </span>
                    </div>
                    <div class="profile-stat">
                        <span class="stat-label">XP</span>
                        <span class="stat-value">
                            <%= user.stats.xp %> / <%= user.stats.xpMax %>
                        </span>
                    </div>
                    <div class="profile-stat">
                        <span class="stat-label">Katılma Tarihi</span>
                        <span class="stat-value">
                            <%= joinDate %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- AVATAR GALLERY -->
    <section class="avatar-section">
        <div class="section-header">
            <h2>Avatar Galerisi</h2>
            <p class="section-subtitle">Profilinde görünecek avatarını seç</p>
        </div>

        <div id="avatarGallery" class="avatar-gallery">
            <div class="loading-message">Avatarlar yükleniyor...</div>
        </div>

        <div class="avatar-actions">
            <button id="saveAvatarBtn" class="btn-primary" disabled>
                Kaydet
            </button>
            <button id="cancelAvatarBtn" class="btn-ghost">
                İptal
            </button>
        </div>
    </section>
</main>

<style>
    .profile-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .profile-hero {
        background: linear-gradient(135deg, rgba(108, 92, 231, 0.1), rgba(255, 118, 117, 0.1));
        border-radius: 16px;
        padding: 3rem 2rem;
        margin-bottom: 3rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .profile-header-content {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .profile-avatar-large {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid #ffdb58;
        box-shadow: 0 8px 32px rgba(255, 219, 88, 0.3);
    }

    .profile-avatar-large img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-info {
        flex: 1;
    }

    .profile-username {
        font-size: 2.5rem;
        color: #ffdb58;
        margin-bottom: 1.5rem;
        font-family: 'Cormorant Garamond', serif;
    }

    .profile-stats-row {
        display: flex;
        gap: 3rem;
    }

    .profile-stat {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .stat-label {
        font-size: 0.875rem;
        color: #a0a0a0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-value {
        font-size: 1.5rem;
        color: #e0e0e0;
        font-weight: 600;
    }

    .avatar-section {
        background: rgba(30, 30, 40, 0.6);
        border-radius: 16px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .section-header {
        margin-bottom: 2rem;
    }

    .section-header h2 {
        font-size: 2rem;
        color: #ffdb58;
        margin-bottom: 0.5rem;
        font-family: 'Cormorant Garamond', serif;
    }

    .section-subtitle {
        color: #a0a0a0;
        font-size: 1rem;
    }

    .avatar-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
        min-height: 200px;
    }

    .loading-message {
        grid-column: 1 / -1;
        text-align: center;
        color: #a0a0a0;
        padding: 3rem;
    }

    .avatar-category {
        grid-column: 1 / -1;
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .avatar-category h3 {
        font-size: 1.25rem;
        color: #6c5ce7;
        font-family: 'Cormorant Garamond', serif;
        text-transform: capitalize;
    }

    .avatar-item {
        cursor: pointer;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
        padding: 0.75rem;
        border-radius: 12px;
        background: rgba(20, 20, 30, 0.5);
        border: 2px solid transparent;
    }

    .avatar-item:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(108, 92, 231, 0.3);
        border-color: rgba(108, 92, 231, 0.5);
    }

    .avatar-item.selected {
        border-color: #ffdb58;
        box-shadow: 0 8px 24px rgba(255, 219, 88, 0.4);
        background: rgba(255, 219, 88, 0.1);
    }

    .avatar-item.current {
        border-color: #6c5ce7;
        box-shadow: 0 8px 24px rgba(108, 92, 231, 0.4);
    }

    .avatar-preview {
        width: 100%;
        aspect-ratio: 1;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 0.5rem;
        border: 2px solid rgba(255, 255, 255, 0.1);
    }

    .avatar-preview img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .avatar-name {
        font-size: 0.875rem;
        color: #e0e0e0;
    }

    .avatar-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn-primary,
    .btn-ghost {
        padding: 0.875rem 2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6c5ce7, #a29bfe);
        color: white;
    }

    .btn-primary:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(108, 92, 231, 0.4);
    }

    .btn-primary:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .btn-ghost {
        background: transparent;
        border: 2px solid #6c5ce7;
        color: #6c5ce7;
    }

    .btn-ghost:hover {
        background: rgba(108, 92, 231, 0.1);
    }

    @media (max-width: 768px) {
        .profile-header-content {
            flex-direction: column;
            text-align: center;
        }

        .profile-stats-row {
            justify-content: center;
        }

        .avatar-gallery {
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
            gap: 1rem;
        }
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', async function () {
        const gallery = document.getElementById('avatarGallery');
        const saveBtn = document.getElementById('saveAvatarBtn');
        const cancelBtn = document.getElementById('cancelAvatarBtn');
        const currentAvatarUrl = '<%= user.avatar %>';

        let selectedAvatarId = null;
        let selectedAvatarUrl = null;

        // Fetch avatars
        try {
            const response = await fetch('/api/avatars');
            const data = await response.json();

            if (!data.success) {
                throw new Error('Avatar yüklenemedi');
            }

            // Clear loading message
            gallery.innerHTML = '';

            // Render avatars by category
            const categories = {
                'default': 'Varsayılan',
                'buyu': 'Büyücüler',
                'elf': 'Elfler',
                'peri': 'Periler',
                'fark': 'Diğer Karakterler'
            };

            Object.keys(categories).forEach(category => {
                if (data.avatars[category] && data.avatars[category].length > 0) {
                    // Category header
                    const categoryHeader = document.createElement('div');
                    categoryHeader.className = 'avatar-category';
                    categoryHeader.innerHTML = `<h3>${categories[category]}</h3>`;
                    gallery.appendChild(categoryHeader);

                    // Avatar items
                    data.avatars[category].forEach(avatar => {
                        const item = document.createElement('div');
                        item.className = 'avatar-item';
                        item.dataset.avatarId = avatar._id;
                        item.dataset.avatarUrl = avatar.imageUrl;

                        // Mark current avatar
                        if (avatar.imageUrl === currentAvatarUrl) {
                            item.classList.add('current');
                        }

                        item.innerHTML = `
            <div class="avatar-preview">
              <img src="${avatar.imageUrl}" alt="${avatar.name}">
            </div>
            <div class="avatar-name">${avatar.name}</div>
          `;

                        item.addEventListener('click', function () {
                            // Remove previous selection
                            document.querySelectorAll('.avatar-item').forEach(el => {
                                el.classList.remove('selected');
                            });

                            // Add selection
                            this.classList.add('selected');
                            selectedAvatarId = this.dataset.avatarId;
                            selectedAvatarUrl = this.dataset.avatarUrl;

                            // Enable save button if different from current
                            saveBtn.disabled = (selectedAvatarUrl === currentAvatarUrl);
                        });

                        gallery.appendChild(item);
                    });
                }
            });

        } catch (error) {
            console.error('Avatar yükleme hatası:', error);
            gallery.innerHTML = '<div class="loading-message">Avatarlar yüklenirken bir hata oluştu</div>';
        }

        // Save avatar
        saveBtn.addEventListener('click', async function () {
            if (!selectedAvatarId) return;

            try {
                const response = await fetch('/api/users/me/avatar', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                    },
                    body: JSON.stringify({ avatarId: selectedAvatarId })
                });

                const data = await response.json();

                if (data.success) {
                    await Swal.fire({
                        title: 'Başarılı!',
                        text: 'Avatar güncellendi',
                        icon: 'success',
                        background: '#151521',
                        color: '#e0e0e0',
                        confirmButtonColor: '#6c5ce7'
                    });

                    // Update current avatar display
                    document.getElementById('currentAvatarDisplay').src = data.avatarUrl;

                    // Reload page to update header
                    window.location.reload();
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                console.error('Avatar kaydetme hatası:', error);
                Swal.fire({
                    title: 'Hata!',
                    text: 'Avatar güncellenirken bir hata oluştu',
                    icon: 'error',
                    background: '#151521',
                    color: '#e0e0e0',
                    confirmButtonColor: '#ff7675'
                });
            }
        });

        // Cancel selection
        cancelBtn.addEventListener('click', function () {
            document.querySelectorAll('.avatar-item').forEach(el => {
                el.classList.remove('selected');
            });
            selectedAvatarId = null;
            selectedAvatarUrl = null;
            saveBtn.disabled = true;
        });
    });
</script>