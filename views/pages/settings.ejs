        box-shadow: 0 8px 24px rgba(255, 118, 117, 0.4);
    }

    @media (max-width: 768px) {
        .danger-content {
            flex-direction: column;
            align-items: stretch;
        }

        .btn-danger {
            width: 100%;
        }
    }
